[
  { "key": "Tab", "command": "focusNextPanel", "when": "filePanel.focus" },
  { "key": "Escape", "command": "focusActivePanel", "when": "terminal.focus" },
  { "key": "ArrowUp", "command": "cursorUp", "when": "filePanel.focus" },
  { "key": "ArrowDown", "command": "cursorDown", "when": "filePanel.focus" },
  { "key": "ArrowLeft", "command": "cursorLeft", "when": "filePanel.focus" },
  { "key": "ArrowRight", "command": "cursorRight", "when": "filePanel.focus" },
  { "key": "Home", "command": "cursorStart", "when": "filePanel.focus" },
  { "key": "End", "command": "cursorEnd", "when": "filePanel.focus" },
  { "key": "PageUp", "command": "cursorPageUp", "when": "filePanel.focus" },
  { "key": "PageDown", "command": "cursorPageDown", "when": "filePanel.focus" },
  { "key": "Shift+ArrowUp", "command": "selectUp", "when": "filePanel.focus" },
  { "key": "Shift+ArrowDown", "command": "selectDown", "when": "filePanel.focus" },
  { "key": "Shift+ArrowLeft", "command": "selectLeft", "when": "filePanel.focus" },
  { "key": "Shift+ArrowRight", "command": "selectRight", "when": "filePanel.focus" },
  { "key": "Shift+Home", "command": "selectStart", "when": "filePanel.focus" },
  { "key": "Shift+End", "command": "selectEnd", "when": "filePanel.focus" },
  { "key": "Shift+PageUp", "command": "selectPageUp", "when": "filePanel.focus" },
  { "key": "Shift+PageDown", "command": "selectPageDown", "when": "filePanel.focus" },
  { "key": "Enter", "command": "open", "when": "filePanel.focus" },
  { "key": "Space", "command": "focusTerminal", "when": "filePanel.focus" },
  { "key": "Shift+Enter", "command": "openShell", "when": "filePanel.focus" },
  { "key": "Ctrl+PageUp", "command": "dirUp", "when": "filePanel.focus" },
  { "key": "Alt+PageUp", "command": "dirUp", "when": "filePanel.focus" },
  { "key": "F3", "command": "viewFile", "when": "filePanel.focus" },
  { "key": "F4", "command": "editFile", "when": "filePanel.focus" },
  { "key": "Shift+F4", "command": "editFileAdv", "when": "filePanel.focus", "args": { "showDialog": true } },
  { "key": "F5", "command": "copyFiles", "when": "filePanel.focus && !filePanel.firstItem" },
  { "key": "F6", "command": "moveFiles", "when": "filePanel.focus && !filePanel.firstItem" },
  { "key": "Shift+F6", "command": "renameFiles", "when": "filePanel.focus && !filePanel.firstItem" },
  { "key": "F7", "command": "mkdir", "when": "filePanel.focus" },
  { "key": "F8", "command": "deleteFiles", "when": "filePanel.focus && !filePanel.firstItem" },

  { "key": "Ctrl+KeyO", "command": "togglePanels" },
  { "key": "Ctrl+KeyD", "command": "switchDevMode" },
  { "key": "Ctrl+KeyH", "command": "switchShowHiddenFiles" },

  { "key": "Alt+ArrowLeft", "command": "prevTab" },
  { "key": "Alt+ArrowRight", "command": "nextTab" },
  { "key": "Alt+Digit1", "command": "setTab", "args": { "index": 1 } },
  { "key": "Alt+Digit2", "command": "setTab", "args": { "index": 2 } },
  { "key": "Alt+Digit3", "command": "setTab", "args": { "index": 3 } },
  { "key": "Alt+Digit4", "command": "setTab", "args": { "index": 4 } },
  { "key": "Alt+Digit5", "command": "setTab", "args": { "index": 5 } },
  { "key": "Alt+Digit6", "command": "setTab", "args": { "index": 6 } },
  { "key": "Alt+Digit7", "command": "setTab", "args": { "index": 7 } },
  { "key": "Alt+Digit8", "command": "setTab", "args": { "index": 8 } },
  { "key": "Alt+Digit9", "command": "setTab", "args": { "index": 9 } },
  { "key": "Alt+Digit0", "command": "setTab", "args": { "index": 10 } },
  { "key": "Ctrl+Backquote", "command": "openHome" }
]
