{
  "name": "code-viewer",
  "displayName": "Code Viewer",
  "publisher": "faraday",
  "description": "Simple code viewer",
  "author": "Mikhail Isupov",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "categories": [
    "QuickView"
  ],
  "keywords": [
    "quickview",
    "text"
  ],

  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "@frdy/sdk": "workspace:*",
    "monaco-editor": "^0.50.0",
    "preact": "^10.23.1"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.9.0",
    "typescript": "^5.5.3",
    "vite": "^5.4.0"
  },
  "contributes": {
    "quickViews": [
      {
        "id": "code",
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx",
          ".cjs",
          ".mjs",
          ".mts",
          ".json",
          ".json5"
        ],
        "path": "./dist/code-viewer.system.js"
      }
    ]
  }
}
