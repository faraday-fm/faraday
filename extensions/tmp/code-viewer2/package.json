{
  "name": "code-viewer",
  "displayName": "Code Viewer",
  "publisher": "faraday",
  "description": "Simple code viewer",
  "author": "Mikhail Isupov",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "categories": [
    "QuickView"
  ],
  "keywords": [
    "quickview",
    "text"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup"
  },
  "dependencies": {
    "@frdy/sdk": "workspace:*",
    "monaco-editor": "^0.50.0",
    "preact": "^10.23.1"
  },
  "devDependencies": {
    "@types/node": "^22.1.0",
    "rollup-plugin-web-worker-loader": "^1.6.1",
    "tsup": "~8.2.4"
  },
  "contributes": {
    "quickViews": [
      {
        "id": "code",
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx",
          ".cjs",
          ".mjs",
          ".mts",
          ".json",
          ".json5"
        ],
        "path": "./dist/index.mjs"
      }
    ]
  }
}
